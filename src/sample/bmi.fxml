<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.BmiController">
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
   <children>
      <Pane prefHeight="400.0" prefWidth="350.0">
         <children>
            <Label alignment="CENTER_RIGHT" layoutX="41.0" layoutY="42.0" prefHeight="27.0" prefWidth="83.0" text="Wzrost:">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Label alignment="CENTER_RIGHT" layoutX="41.0" layoutY="104.0" prefHeight="27.0" prefWidth="83.0" text="Waga:">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <TextField fx:id="height" layoutX="133.0" layoutY="43.0" promptText="metry" />
            <TextField fx:id="weight" layoutX="133.0" layoutY="105.0" promptText="kilogramy" />
            <RadioButton fx:id="women" layoutX="63.0" layoutY="156.0" mnemonicParsing="false" text="Kobieta">
